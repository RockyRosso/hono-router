{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "resolveJsonModule": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "removeComments": true
    }
}
